<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">


	<servlet>
		<servlet-name>srv1</servlet-name>
		<servlet-class>com.jb.addition</servlet-class>

	</servlet>

	<servlet-mapping>
		<servlet-name>srv1</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>pqr</servlet-name>
		<servlet-class>com.jb.LoginInfo</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>pqr</servlet-name>
		<url-pattern>/sqr</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.jb.LoginInfo</servlet-class>


		<init-param>
			<param-name>name_config</param-name>
			<param-value>Jay Bhoi</param-value>
		</init-param>


	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>


	<context-param>
		<param-name>name</param-name>
		<param-value>Jay</param-value>
	</context-param>

	<context-param>
		<param-name>phone</param-name>
		<param-value>Samsung</param-value>
	</context-param>

</web-app>